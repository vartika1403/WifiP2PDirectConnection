<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.wifip2pdirectconnection.NewActivity">

    <TextView
        android:id="@+id/nsd_service_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="NSD SERVICE CONNECTION"
        android:textSize="23sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register_nsd_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nsd_service_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="REGISTER SERVICE" />

    <Button
        android:id="@+id/discover_nsd_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_nsd_service"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="DISCOVER SERVICES" />

</RelativeLayout>
