<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.wifip2pdirectconnection.MainActivity">

    <Button
        android:id="@+id/discover_peer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover Peers" />

    <TextView
        android:id="@+id/first_device_name_text"
        android:text="DEVICE NAME"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_below="@id/discover_peer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/register_local_service"
        android:text="REGISTER LOCAL SERVICE"
        android:layout_marginTop="10dp"
        android:layout_below="@id/first_device_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/discover_peer_local_Service"
        android:text="DISCOVER PEERS USING LOCAL SERVICE"
        android:layout_marginTop="10dp"
        android:layout_below="@id/register_local_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
